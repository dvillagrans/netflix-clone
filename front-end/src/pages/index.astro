---
import { Button } from "../components/button";
import { Icons } from "../components/icons";

const { PlayIcon, InfoIcon, BellIcon, SearchIcon, ChevronDownIcon } = Icons;

const movieData = {
  featured: {
    title: "Stranger Things",
    description:
      "When a young boy vanishes, a small town uncovers a mystery involving secret experiments, terrifying supernatural forces, and one strange little girl.",
    image: "/placeholder.svg?height=600&width=1200",
  },
  categories: [
    {
      name: "Tendencias",
      movies: [
        {
          title: "The Witcher",
          image: "/placeholder.svg?height=200&width=134",
        },
        { title: "Bridgerton", image: "/placeholder.svg?height=200&width=134" },
        {
          title: "Money Heist",
          image: "/placeholder.svg?height=200&width=134",
        },
        { title: "The Crown", image: "/placeholder.svg?height=200&width=134" },
        { title: "Ozark", image: "/placeholder.svg?height=200&width=134" },
      ],
    },
    {
      name: "Originales de Netflix",
      movies: [
        { title: "Narcos", image: "/placeholder.svg?height=200&width=134" },
        {
          title: "The Queen's Gambit",
          image: "/placeholder.svg?height=200&width=134",
        },
        { title: "Dark", image: "/placeholder.svg?height=200&width=134" },
        {
          title: "Black Mirror",
          image: "/placeholder.svg?height=200&width=134",
        },
        { title: "Mindhunter", image: "/placeholder.svg?height=200&width=134" },
      ],
    },
  ],
};
---

<div class="min-h-screen bg-black text-white">
  <!-- Barra de navegación -->
  <nav
    class="flex items-center justify-between px-12 py-4 bg-black bg-opacity-90 fixed w-full z-50"
  >
    <div class="flex items-center">
      <img
        src="/placeholder.svg?height=32&width=108"
        alt="Netflix"
        class="h-8"
      />
      <ul class="flex ml-8 space-x-4">
        <li>Inicio</li>
        <li>Series TV</li>
        <li>Películas</li>
        <li>Novedades populares</li>
        <li>Mi lista</li>
      </ul>
    </div>
    <div class="flex items-center space-x-4">
      <SearchIcon className="h-5 w-5" />
      <BellIcon className="h-5 w-5" />
      <img
        src="/placeholder.svg?height=32&width=32"
        alt="User"
        class="h-8 w-8 rounded"
      />
      <ChevronDownIcon className="h-4 w-4" />
    </div>
  </nav>

  <!-- Banner principal -->
  <div class="relative pt-20 pb-40 mb-8">
    <div
      class="absolute inset-0 bg-cover bg-center"
      style={`background-image: url(${movieData.featured.image});`}
    >
      <div class="absolute inset-0 bg-gradient-to-r from-black to-transparent">
      </div>
    </div>
    <div class="relative z-10 px-12 pt-32">
      <h1 class="text-5xl font-bold mb-4">{movieData.featured.title}</h1>
      <p class="text-lg max-w-xl mb-6">{movieData.featured.description}</p>
      <div class="flex space-x-4">
        <Button className="flex items-center">
          <PlayIcon className="mr-2" /> Reproducir
        </Button>
        <Button variant="secondary" className="flex items-center">
          <InfoIcon className="mr-2" /> Más información
        </Button>
      </div>
    </div>
  </div>

  <!-- Filas de películas -->
  {
    movieData.categories.map((category) => (
      <div class="px-12 mb-8">
        <h2 class="text-2xl font-semibold mb-4">{category.name}</h2>
        <div class="flex space-x-4 overflow-x-auto pb-4">
          {category.movies.map((movie) => (
            <div class="flex-shrink-0">
              <img
                src={movie.image}
                alt={movie.title}
                class="w-32 h-48 object-cover rounded transition-transform duration-300 hover:scale-110"
              />
            </div>
          ))}
        </div>
      </div>
    ))
  }
</div>
